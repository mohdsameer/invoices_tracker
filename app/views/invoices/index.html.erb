<h1>Welcome</h1>
<%= link_to "New Invoice", new_invoice_path %>

<% if @invoices.present? %>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Amount</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @invoices.each_with_index do |invoice, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= invoice.amount %></td>
        <td><%= invoice.invoice_date %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
